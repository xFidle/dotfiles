{
    "editor.formatOnSave": true,
    "material-icon-theme.folders.theme": "classic",
    "editor.lineHeight": 2,
    "github.copilot.enable": { "*": false }, 
    "editor.minimap.enabled": false,
    "editor.inlayHints.enabled": "on",
    "breadcrumbs.enabled": false,
    "workbench.activityBar.location": "hidden",
    "editor.lineNumbers": "relative",
    "vim.leader": "<Space>",
    "vim.hlsearch": true,
    "vim.normalModeKeyBindingsNonRecursive": [
        { "before": ["<S-h>"], "commands": [":bprevious"] },
        { "before": ["<S-l>"], "commands": [":bnext"] },
        { "before": ["leader", "v"], "commands": [":vsplit"] },
        { "before": ["leader", "s"], "commands": [":split"] },
        { "before": ["leader", "h"], "commands": ["workbench.action.focusLeftGroup"] },
        { "before": ["leader", "j"], "commands": ["workbench.action.focusBelowGroup"] },
        { "before": ["leader", "k"], "commands": ["workbench.action.focusAboveGroup"] },
        { "before": ["leader", "l"], "commands": ["workbench.action.focusRightGroup"] },
        { "before": ["leader", "w"], "commands": [":w!"] },
        { "before": ["leader", "q"], "commands": [":q!"] },
        { "before": ["leader", "x"], "commands": [":x!"] },
        { "before": ["leader", "f"], "commands": ["workbench.action.quickOpen"] },
        { "before": ["leader", "p"], "commands": ["editor.action.formatDocument"] },
        { "before": ["leader", " "], "after": ["a", " ", "<Esc>"]},
        { "before": ["leader", "enter"], "after": ["o", "<Esc>"]},
  ],
    "vim.visualModeKeyBindings": [
        { "before": ["<"], "commands": ["editor.action.outdentLines"] },
        { "before": [">"], "commands": ["editor.action.indentLines"] },
        { "before": ["J"], "commands": ["editor.action.moveLinesDownAction"] },
        { "before": ["K"], "commands": ["editor.action.moveLinesUpAction"] },
        { "before": ["leader", "c"], "commands": ["editor.action.commentLine"] }
  ],
  "workbench.colorCustomizations": {
    "sideBar.border": "#000000",
    "panel.border": "#000000",
    "titleBar.border": "#000000"
  },
  "files.associations": {
    "*.s": "asm-intel-x86-generic"
  },
  "extensions.ignoreRecommendations": true,
  "editor.tabSize": 2,
  "github.copilot.nextEditSuggestions.enabled": true,
  "workbench.colorTheme": "poimandres",
  "workbench.iconTheme": "material-icon-theme",
  "github.copilot.advanced": {
    "authPermissions": "minimal"
  },
  "editor.fontFamily": "JetBrainsMono Nerd Font",
  "editor.autoClosingBrackets": "always",
  "editor.fontSize": 16,
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
}